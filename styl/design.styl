body
  padding-top 70px
  font-family 'Open Sans', sans-serif
  background-color #f3f3f3
  color #696969
  margin-bottom 101px

  // margin bottom is added to account for the footer height.
  // the following adjusts the required margin when the footer
  // size is different (due to breaking on multiple lines)
  @media (min-width:768px) and (max-width:991px)
    margin-bottom 100px
  @media (max-width:767px)
    margin-bottom 122px
  @media (max-width:445px)
    margin-bottom 143px
  @media (max-width:310px)
    margin-bottom 164px

html
  position relative
  min-height 100%

a, .btn-link
  color #3eb5bb
  &:hover, &:focus
    color #61c6cb

// Main navbar

body > .navbar
  min-height 70px

  &.navbar-inverse
    background-color #7a6592
    border-color #7a6592

    .navbar-toggle
      border-color #ffffff
      margin-top 18px
      &:hover, &:focus
        background-color #9482a8

    .navbar-collapse
      border none
      box-shadow none
      -webkit-box-shadow none

      &.in
        border-bottom 1px solid rgba(255, 255, 255, 0.2)

    @media (max-width:767px)
      .navbar-nav .open .dropdown-menu>li>a
        color #fff
      .navbar-nav .open .dropdown-menu .divider
        background-color rgba(255, 255, 255, 0.2)

  .navbar-header
    padding-left 15px
    margin-right 25px
    @media (max-width:767px)
      margin-right 0

  .navbar-brand
    height 39px
    width 179px
    background url(img/logo.png) no-repeat
    margin-top 15.5px
    text-indent -9999px

  // .navbar-right
  //  margin-right -10px !important

  .navbar-nav
    margin-top 19px
    & > li
      margin-left 10px
      margin-right 10px
      & > a
        font-size 15px
        color #ffffff
  .nav
    .navbar-collapse li
      margin-bottom 5px

    > li > a
      padding 5px 10px
      border 1px solid transparent
      -webkit-transition all 0.1s linear
      -moz-transition all 0.1s linear
      -o-transition all 0.1s linear
      transition all 0.1s linear

      &.active, &:hover,  &:focus
        background #9482A8
        border-radius 4px

      &.highlight, &:hover
        border 1px solid rgba(255, 255, 255, 0.6)
        border-radius 4px

      @media (max-width:767px)
        &.highlight
          border inherit

  // make sure navbar fits on smaller screens
  @media (max-width:1000px)
    .navbar-nav > li
      margin-left 5px
      margin-right 5px

      > a
        padding 5px

// when document is scrolled, add a menu bottom margin
body.scroll > .navbar.navbar-inverse
  border-color rgba(255,255,255,0.2)

  .in
    border-bottom 0 !important

// override color for open menu item
.navbar-inverse .navbar-nav>.open>a, .navbar-inverse .navbar-nav>.open>a:focus, .navbar-inverse .navbar-nav>.open>a:hover
  background #9482A8
.nav .open>a, .nav .open>a:focus, .nav .open>a:hover
  border-color rgba(255, 255, 255, 0.6)

// Page header component
.page-header
  background-color #ffffff
  border-bottom 1px solid #ededed
  padding 40px 0
  margin 0 0 30px 0

  h1
    color #7a6592
    font-weight 700
    font-size 48px
    margin 0

    small
      font-size 20px
      vertical-align middle

  h4.pull-right
    font-size 24px
    margin 13px 0 0
    a
      font-weight 700

  p
    margin 10px 0 0
    font-size 18px
    font-weight 500

  @media (max-width:767px)
    padding 30px 0
    h1
      font-size 36px
    h4.pull-right
      font-size 20px
      margin-top 12px

// Main page content
body > .content
  padding-bottom 40px

// Blockquote
blockquote
  border-left 3px solid rgba(0, 0, 0, 0.2)

// Semantic UI step
.ui.steps .step.active
  background #f3f3f3

// Nav pils
.nav-pills>li.active>a, .nav-pills>li.active>a:focus, .nav-pills>li.active>a:hover
  background-color #7A6592
.nav-pills>li>a
  color #7A6592

// Forms
form
  label
    font-size 18px
    font-weight 500

  .form-control
    -webkit-box-shadow inset 0 2px 2px rgba(0, 0, 0, 0.06)
    -moz-box-shadow inset 0 2px 2px rgba(0, 0, 0, 0.06)
    box-shadow inset 0 2px 2px rgba(0, 0, 0, 0.06)

    &.input-lg
      font-size 24px
      padding 0.6666em 0.625em
      height auto
      @media (max-width:767px)
        font-size 18px

    &:focus
      border-color #61c6cb
      -webkit-box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075) 0 0 8px #88d4d7
      -moz-box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075) 0 0 8px #88d4d7
      box-shadow inset 0 1px 1px rgba(0, 0, 0, 0.075) 0 0 8px #88d4d7

  .commentbig
    font-size 18px
    margin-top 20px
    margin-bottom 20px

  .open > .dropdown-toggle.btn-primary
    background-color #61c6cb

// Buttons
.btn
  -webkit-transition all 0.1s linear
  -moz-transition all 0.1s linear
  -o-transition all 0.1s linear
  transition all 0.1s linear

.btn-primary
  color #fff

  &, &.disabld, &[disabled], fieldset[disabled] &
    background #3eb5bb
    border-color @background
  &:hover, &:focus, &:active, &.active
    &, &.disabld, &[disabled], fieldset[disabled] &
      background #61c6cb
      border-color @background

.btn-brand
  color #fff

  &, &.disabld, &[disabled], fieldset[disabled] &
    background #7A6592
    border-color @background
  &:hover, &:focus, &:active, &.active
    &, &.disabld, &[disabled], fieldset[disabled] &
      color #fff
      text-decoration none
      background #9482a8
      border-color @background

// Forms
.mainform
  max-width 850px

// Footer
body > footer
  position absolute
  bottom 0
  width 100%
  padding 40px 0
  background-color #ffffff
  border-top 1px solid #ededed

  ul.list-inline
    margin-bottom 0
  li
    font-size 15px
  a
    color #7a6592
    font-weight bold

    &:hover, &:focus
      color #9482A8

  @media (min-width: 768px) and (max-width: 991px)
    ul.list-inline li
      font-size 14px
      padding 0 3px

  @media (max-width: 767px)
    ul.list-inline
      float none !important
    li
      float left

// Styling
.pager a
  color #7A6592
h1, h2, h3, h4, h5
  code
    font-weight bold
    background transparent
    color #696969
.text-muted
  color #999
.help-block
  color #888
