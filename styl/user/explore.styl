body > .content
  padding-bottom 0

.page-header
  text-align center

  .intro
    margin 30px 0

  @media (max-width:425px)
    .btn
      display block
      margin-bottom 0.5em

.explore
  h2
    font-size 30px
    font-weight 300
    color #7A6592
    margin 0 0 10px 0

  .agents, .top-users
    .slide
      margin-top 20px
    .btn
      margin-bottom 10px
      // img/arrowsmallwhite.png
      // background-image url('data:image/png;base64,')
      // background-repeat no-repeat
      // background-position center right 12px
      // Safari <= 7 does not support long-hand background-position,
      // resorting to pseudo-elements instead (below)
      // see: https://bugs.webkit.org/show_bug.cgi?id=37514
      font-size 16px

      &:after
        content ' '
        width 6px
        height 15px
        margin-left 5px
        display inline-block
        vertical-align middle
        background-image url('data:image/png;base64,')

  .agents
    padding-bottom 5px

  .top-users
    padding 30px 0 5px 0
    background #fff
    border-top 1px solid #ECECEC
    border-bottom 1px solid #ECECEC

    .user
      border 1px solid #EAEAEA

  .user
    padding 15px
    width 100%
    background #fff
    margin-bottom 25px
    border-radius 8px
    -webkit-border-radius 8px
    -moz-border-radius 8px

    .thumb
      display block
      margin-right 15px
      padding 10px
      background #f3f3f3
      border-radius 4px

      img
        width 95px
        height 95px

    .media-body
      padding-top 1px

    h3
      max-height 1.2em
      margin 0 0 10px
      font-size 23px
      white-space nowrap

      a:first-child
        float left
        overflow hidden
        text-overflow ellipsis
        line-height 1.3
        color #696969

        &, &:hover, &:focus
          text-decoration none
        @media (max-width:767px)
          max-width calc(100% - 47px)
        @media (min-width:768px) and (max-width:991px)
          max-width 125px
        @media (min-width 992px) and (max-width:1199px)
          max-width 235px
        @media (min-width:1200px)
          max-width 145px

    .bitrating
      float right
      right -0.5em
      font-size 18px

      span
        margin-top 2px

    .user-metrics
      margin-top 0

    p
      color #aeaeae
      height 2.85em
      overflow hidden

      // when displayed as one column and w/o image, don't consume unused height
      @media only screen and (max-width:450px)
        height auto
        max-height 2.85em

    // on extra small screens, display a smaller image
    // that floats instead of taking up a column.
    @media (max-width:450px)
      h3, p
        margin-bottom 5px
      .thumb
        padding 5px
        margin-right 10px
      .thumb img
        width 55px
        height 55px

  .carousel-control
    width 70px
    background none
    &.right
      right -70px
    &.left
      left -70px
    &:before
      content ' '
      position absolute
      top 50%
      left 50%
      width 18px
      height 51px
      margin-top -(@height/2)
      margin-left -(@width/2)
      // img/slider.png
      background url('data:image/png;base64,') no-repeat
    &.left:before
      background-position right

  .find-user
    background #3EB5BB
    padding 30px 0
    text-align center

    label
      font-size 30px
      color #fff

    .form-control
      display inline
      width 300px
      height 45px
      padding 5px
      margin 0 10px
      border 2px solid #7A6592

    .btn
      vertical-align top

    @media only screen and (max-width:480px)
      label, .form-control, button
        display block
        width 100%
      .form-control
        margin 10px 0

  @media only screen and (max-width:1095px)
    .carousel-control
      width 30px
      &.right
        right -30px
      &.left
        left -30px
    .agents, .top-users
      .container
        padding 0 30px
  @media only screen and (max-width:850px)
    .carousel-control
      width 30px
      &.right
        right -30px
      &.left
        left -30px
    .agents, .top-users
      .container
        padding 0 30px
