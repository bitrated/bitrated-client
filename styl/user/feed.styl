.feed-item
  border-bottom 1px solid #D5D5D5
  padding-bottom 20px
  padding-top 20px

  &:first-child
    margin-top 0
    padding-top 10px
  &:last-child
    border 0

  .media-body
    padding 2px 0 0 0

    .heading
      margin-bottom 10px

      h2
        float left
        font-size 22px
        margin 0px
        a
          color #696969
        small
          font-size 100%
          font-weight 200

      time.reltime
        float right
        margin-left 5px
        font-weight 600

      .bitrating
        font-size 16px
      .bitrating:before
        top -0.15em

    p:last-child
      margin-bottom 0

  .thumb img
    width 70px
    height 70px

  @media (min-width: 768px) and (max-width: 991px)
    .media-body .heading
      h2
        font-size 18px

      time.reltime
        font-size 12px

  @media (max-width: 640px)
    .media-body .heading
      h2
        font-size 17px

      time.reltime
        font-size 11px

  @media (max-width: 550px)
    .media-left
      padding-right 5px
    .media-body .heading
      h2
        margin-top -2px
        float none
      time.reltime
        float none
        margin-left 0

    .thumb img
      width 35px
      height 35px
