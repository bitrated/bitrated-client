.welcome
  text-align center

  h2
    font-size 36px
    color #404040
    font-weight 200
    margin 0 0 0.5em 0

  p.lead
    font-size 18px
    color #888
    margin-bottom 2em

  h3, h3:hover
    margin 0 0 10px 0
    font-size 18px
    color #404040
    font-weight 600

  p
    font-size 15px
    color #888

  // additional info
  .well
    background #fff
    text-align left
    margin-top 2em

  // three steps
  .row > a
    display block

    &:before
      background url(../img/user/welcome.png) no-repeat
      display block
      margin 0 auto 20px auto
      content ' '

    &:hover, *:hover
      text-decoration none

    &.link-accounts:before
      background-position -5px -5px
      width 172px
      height 135px

    &.get-vouched:before
      background-position -187px -5px
      width 205px
      height 135px

    &.complete-profile:before
      background-position -5px -150px
      width 166px
      height 133px
      // make up for this being 2px shorter than the rest
      margin-bottom 22px
      // requires manual centering
      margin-left 30px
      @media (max-width: 1199px)
        margin-left 7px

  // mobile
  @media (max-width: 991px)
    text-align left
    .row > a:before
      margin 0 !important
