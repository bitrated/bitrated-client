ul.linked-accounts
  list-style-type none
  margin 0
  padding 0

  li
    padding 0px
    overflow hidden

  .badge
    float right

  .profile .tabs & li
    height 115px

  .profile .sidebar & a
    margin 0
    padding 15px 0

a.linked-account
  display block
  padding 15px
  text-decoration none

  &:not([href])
    cursor auto

  .connect-site
    float left

  h5
    margin 0 0 6px 0
    color #7A6592
    font-weight bold
    height 1em
    overflow visible
    .feed &
      margin-bottom 7px

  .badge
    color #7A6592
    border 1px solid #7A6592
    background transparent
    font-weight normal
    .feed &
      margin-left 7px

  .body
    margin-left 54px
    padding-left 5px

    .acc-name
      margin-bottom 0px
      &, a
        color #696969

    .text-muted
      font-size 0.9em
      margin-bottom 0

  .glyphicon-remove
    color lighten(#7A6592, 30%)
  &:hover .glyphicon-remove
    color darken(#7A6592, 20%)

#get-vouched
  .modal-header
    border-bottom 0
  .modal-body
    text-align center
    padding-bottom 30px
  h2
    margin 0 0 25px 0
  .share-url
    font-size 1.3em
    margin 1em 0

