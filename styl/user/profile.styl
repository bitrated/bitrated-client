@import feed
@import ratings
@import connect-sites
@import '../rating/dialog'

body > .content
  padding-bottom 0

.profile
  header
    background #fff
    padding 72px 0 0 0

    @media only screen and (max-width: 767px)
      padding-top 30px

    .user-metrics
      margin-top 25px

      li
        margin 0
        padding 10px 14px

        &.activity a
          background-position -6px 1px
          padding-left 34px

        &.active
          background #f3f3f3
          border 1px solid #ededed
          padding-top 9px
          border-bottom 0
          border-radius 4px 4px 0 0

      // enlarge metrics on bigger screens
      @media (min-width: 992px)
        li
          padding 10px 20px
          a
            font-size 18px
          span.num
            font-size 20px

      // adjust metrics for smallers screens
      @media (min-width:992px) and (max-width: 1199px)
        li
          padding 10px 15px

      @media (max-width: 585px), (min-width:768px) and (max-width: 991px)
        li
          &.activity a
            background-position -6px -4px
          &.reviews a
            background-position -3px -33px
          &.vouches a
            background-position 0px -60px
          &.linked a
            background-position -4px -91px

      @media (min-width:768px) and (max-width: 991px)
        li
          padding 10px 4px
          &.active
            padding-top 9px
          a
            font-size 13px
          span.num
            font-size 16px
            margin-left -4px

      @media (max-width:767px)
        li
          padding 10px
          &.activity a
            background-position -6px -2px

      @media (max-width: 585px)
        li
          padding 8px 9px
          &.active
            padding-top 7px
          &.activity a
            background-position -2px -4px
            .num
              content '&#8203;'
          span.num
            font-weight normal
            font-size 16px
          .caption
            display none

          &:first-child:not(.active)
            padding-left 0
          &:last-child:not(.active)
            padding-right 0

    h1
      margin-top 6px

      a.user-link
        font-size 36px
        color #7a6592
        font-weight bold

      .bitrating.c4 span
        margin-top 1px

      a, a:hover
        text-decoration none

      .mobi
        display none

    h4
      margin-top 20px
      min-height 1em

    @media (max-width: 767px)
      h1
        .mobi.profile-img
          display block
          float left
          margin-right 10px
          img
            width 50px
            height 50px
      .user-link
        vertical-align middle
      .bitrating
        top 0
      h4
        min-height 0

    @media (max-width: 340px)
      .bitrating
        float right
        top 6px

  .profile-body
    border-top 1px solid #EDEDED
    margin-top -1px

  .sidebar
    overflow auto
    background #fff
    top -160px
    padding-bottom 15px
    border 1px solid #EDEDED
    border-radius 5px 5px 0 0

    @media only screen and (max-width: 767px)
      top 0
      border none
      padding-top 20px
      margin-top 20px

    .profile-img
      display block
      margin-bottom 10px
      img
        display block
        border-radius 5px 5px 0 0
        width 100%

    section
      display block
      border-bottom 1px solid #ededed
      margin-top 10px
      padding-bottom 10px
      &:last-child
        border-bottom 0
        padding-bottom 0

    h4.full-name
      font-weight bold
      margin 0

    .props
      margin-bottom 0
      font-weight normal

      label
        font-weight bold
        margin-right 10px

      > li > small
        font-weight normal

    .sin
      .glyphicon
        cursor pointer
        top -3px

      @media (min-width: 768px)
        .sin-addr
          display inline-block
          width 13em
          width calc(100% - 35px - 25px)
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
      @media (max-width: 767px)
        .glyphicon
          top 2px

    .aboutme
      margin-bottom 15px
      padding-bottom 6px

      h1
        font-size 26px
      h2
        font-size 21px
      h3
        font-size 17px
      h4, h5
        font-size 1em

  .tabs
    padding-top 20px

    .nav
      li
        a
          background transparent
          color #000
        &.active a
          background #fff
        &.disabled a
          color #777

    h4.tab-title
      display none
      margin 0 0 1em

      // this is the width at which the tab labels
      // become hidden. only then the heading should
      // be displayed.
      @media (max-width: 585px)
        display block

    .welcome
      padding-bottom 20px
      margin-bottom 20px

    > .btn:last-child, > :last-child
      margin-bottom 1em

  .popover
    width 335px
    max-width @width

  @media (min-width: 768px)
    // some more spacing
    .banner, .tabs
      padding-left 25px

    
