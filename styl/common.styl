// Fixes https://github.com/twbs/bootstrap/issues/12759,
// until its shipped with Boostrap v3.2.0
.form-inline
  .input-group
    display inline-table
    vertical-align middle

    .input-group-addon, .input-group-btn, .form-control
      width auto !important

// Not displayed by default, might be displayed with JS
.unsupported-browser
  display none

// Behaviour
.user-text
  word-break break-word

// 
// Components
// 
time[title]
  border-bottom 1px dotted #999

// Callout
.bs-callout
  margin 20px 0
  padding 20px
  border 1px solid #eee
  border-radius 4px

  h3, h4
    margin 0 0 0.5em 0
  > p:last-child
    margin-bottom 0

.bs-callout-danger
  background-color #f2d0d0
  border-color #c38484
  color #692626
.bs-callout-warning
  background-color #fcf8f2
  border-color #f0ad4e
  color #836532
.bs-callout-info
  background-color #E8E8E8
  border-color #BBB
  color #383838

// 
// User metrics
// 

metrics-big-styles()

ul.user-metrics
  list-style-type none
  margin 15px 0 0 0
  padding 0

  li
    float left
    &:last-child
      margin-right 0 !important

  a
    display block
    font-size 14px
    color #7a6592
    background transparent no-repeat left center

    &:hover
      text-decoration none
    span.num
      font-weight bold


  &.small
    li
      margin-right 20px

      a
        background url(img/metrics-s-sprite.png) no-repeat
      &.reviews a
        padding-left 24px
        background-position -2px 1px
      &.vouches a
        padding-left 27px
        background-position 0px -17px
      &.linked a
        padding-left 20px
        background-position -3px -36px

  &.big
    li
      margin-right 30px
      margin-bottom 15px

      a
        background url(img/metrics-b-sprite.png) no-repeat
      &.reviews a
        padding-left 40px
        background-position -3px -29px
      &.vouches a
        padding-left 45px
        background-position -0px -58px
      &.linked a
        padding-left 34px
        background-position -4px -88px
      span.num
        font-size 18px

  // not currently used.
  // &.big-on-xs
  //   @media (max-width:767px)
  //     metrics-big-styles()

// 
// General
// 
.btn.indicator
  position relative
  padding-left 56px

  .glyphicon
    position absolute
    left 20px
    top 50%
    margin-top -0.5em
  .glyphicon-remove
    color #A63232
    
.form-control
  &:placeholder-shown
    color #A9A9A9
  &::-webkit-input-placeholder
    color #A9A9A9
  &:-moz-placeholder
    color #A9A9A9
  &::-moz-placeholder
    color #A9A9A9
  &:-ms-input-placeholder
    color #A9A9A9

a, [data-toggle='popover']
  cursor pointer

.help-block label
  font-size inherit
  font-weight inherit

// Fix #hash links with bootstrap fixed navbar
// https://github.com/twbs/bootstrap/issues/1768
// http://stackoverflow.com/a/22655654/865693
:target:before
  content " "
  display block
  height 90px
  margin -90px 0 0

// https://github.com/twbs/bootstrap/pull/15140
.media
  display table
.media-body
  width 100%
