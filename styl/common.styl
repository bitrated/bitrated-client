@import design
@import glyphs
@import bitrating

// 
// Helper classes
// 
.break
  word-break break-all

.notes
  margin-top 1em
  font-size 0.9em

// 
// Layout
// 
.container-narrow
  max-width 850px

// 
// Elements
// 
.authicon
  display block
  margin -8px auto 0 auto

.notifications
  .glyphicon-bell
    top 4px
  ul
    padding-top 0
    width 25em
    @media (min-width:768px)
      max-height 30em
      overflow auto
  li
    border-bottom 1px solid #E5E5E5
    &:last-child
      border-bottom none
  li > a
    padding 9.5px 20px
    white-space normal
  .badge
    background #D34836
    color #FFF
  .unread a
    @media (min-width:768px)
      background #FFFDD4
  small
    display block

  // This should probably be moved somewhere else... but its a nice quick & dirty solution.
  ul:empty
    padding 10px
    text-align center
    color #888
    &:before
      content 'Loading notifications...'
  &.loaded ul:empty:before
      content 'You have no notifications.'

// Button styling
.btn-xl
  padding 15px 25px
  font-size 20px
  font-weight bold
  text-transform uppercase

.btn-xxl
  padding 14px 30px
  font-size 24px
  font-weight 700
  text-transform uppercase

// Property list
ul.props
  color #696969
  list-style none
  text-align right
  font-weight bold
  padding 0
  > li
    clear both
    border-bottom 1px solid #ededed
    margin-bottom 15px
    padding 0 0 6px 0
    &:last-child
      border-bottom 0
      margin-bottom 0
  label
    float left
    margin 0
    font-weight normal

// 
// Rating icons
// 
.rating-icon
  background url(img/rating/trade-sprite.png)
  width 82px
  height 82px

  &[data-rating="-6"]
    background-position -371px top
  &[data-rating="-3"]
    background-position -185px top
  &[data-rating="2"]
    background-position -93px top
  &[data-rating="5"]
    background-position 0 top

  &.rating-icon-greyscale
    &[data-rating="-6"]
      background-position -371px bottom
    &[data-rating="-3"]
      background-position -187px bottom
    &[data-rating="2"]
      background-position -93px bottom
    &[data-rating="5"]
      background-position 0 bottom

  &.rating-icon-small
    width 24px
    height 24px
    background url(img/rating/trade-sprite-small.png)

    &[data-rating="-6"]
      background-position -108px top
    &[data-rating="-3"]
      background-position -54px top
    &[data-rating="2"]
      background-position -27px top
    &[data-rating="5"]
      background-position 0 top

    &.rating-icon-greyscale
      &[data-rating="-6"]
        background-position -108px bottom
        &:hover, &.active
          background-position -108px top
      &[data-rating="-3"]
        background-position -54px bottom
        &:hover, &.active
          background-position -54px top
      &[data-rating="2"]
        background-position -27px bottom
        &:hover, &.active
          background-position -27px top
      &[data-rating="5"]
        background-position 0 bottom
        &:hover, &.active
          background-position 0 top

for value in 5 10 25
  &.vouch-rating-icon-{value}
    display none

