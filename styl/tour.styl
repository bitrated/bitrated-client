filter(args...)
  -webkit-filter args
  -moz-filter args
  filter args

// win the specificity war
body
  // reset bootstrap's box-sizing, so it'll play nicely with intro.js
  .introjs-helperLayer, .introjs-overlay, .introjsFloatingElement, .introjs-tooltipReferenceLayer
    &, *
      -webkit-box-sizing initial
      box-sizing initial

  .introjs-tooltiptext, .introjs-bullets, .introjs-progress
    margin-bottom 1em

  .introjs-tooltip
    background #7A6592
    min-width 350px
    max-width 450px
    font-size 18px
    padding 1em
    border-radius 5px
    filter drop-shadow(0 1px 4px rgba(0, 0, 0, 0.2))

  .introjs-tooltiptext
    color #fff

  .introjs-tooltipbuttons
    .introjs-skipbuttonx, .disabled
      display none
    .btn
      outline 0
      margin-right 7px
      &:last-child
        margin-right 0
    .btn-default
      background #eee

  .introjs-arrow
    border-width 16px
    &.top
      top -31px
      border-bottom-color #7A6592
      filter drop-shadow(0px -3px 1px rgba(0,0,0,0.2))
    &.left
      left -31px
      border-right-color #7A6592
    &.bottom
      bottom -31px
      border-top-color #7A6592
    &.right
      right -31px
      border-left-color #7A6592
      filter drop-shadow(3px 0px 1px rgba(0,0,0,0.2))

  .introjs-tooltip.floating
    position fixed

  .introjs-helperLayer.scale-hexagon
    width 75px !important
    height 68px !important
    top 135px !important
    left 662px !important

  @media (max-width:767px)
    .introjs-tooltip
      min-width 250px
      max-width 70%
      font-size 15px
