extend ../../layout

append vars
  - page_title = 'Link Hacker News account'
  - include_header = true

block page-header
  h1 Link Hacker News account

block content
  .container-narrow
    if error
      .bs-callout.bs-callout-danger= error

    .row: form.col-md-8(method='post')
      +csrf

      .form-group
        label(for='username') HackerNews username
        input#username.form-control(type='text', name='username', value=hnuser, required, autofocus)

      :markdown
        To verify your ownership of the Hacker News account,
        add the following text to your profile's about text:

      pre= message

      button.btn.btn-primary.btn-lg(type='submit') Authenticate
