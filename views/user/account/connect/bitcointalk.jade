extend ../../layout

append vars
  - page_title = 'Link BitcoinTalk account'
  - include_header = true

block page-header
  h1 Link BitcoinTalk account

block content
  .container-narrow
    if error
      .bs-callout.bs-callout-danger= error

    .row: form.col-md-8(method='post')
      +csrf

      .form-group
        label(for='username') BitcoinTalk profile URL:
        input#username.form-control(type='text', name='url', value=bturl, required, autofocus,
          placeholder='e.g. https://bitcointalk.org/index.php?action=profile;u=12345')

      :markdown
        To verify your ownership of the BitcoinTalk account,
        [add the following text](https://bitcointalk.org/index.php?action=profile;sa=forumProfile)
        to your forum signature:

      pre= message

      button.btn.btn-primary.btn-lg(type='submit') Authenticate
