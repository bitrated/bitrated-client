extend ../../layout

append vars
  - page_title = 'Link Steem account'
  - include_header = true

block page-header
  h1 Link Steem account

block content
  .container-narrow
    if error
      .bs-callout.bs-callout-danger= error

    .row: form.col-md-8(method='post')
      +csrf

      .form-group
        label(for='username') Steem username:
        input#username.form-control(type='text', name='username', value=connect_user, required, autofocus)

      :markdown
        To verify you own this Steem account,
        add the following text as a comment on the following post:
        [""]()

      pre= message

      button.btn.btn-primary.btn-lg(type='submit') Authenticate
