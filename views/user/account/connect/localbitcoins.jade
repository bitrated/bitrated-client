extend ../../layout

append vars
  - page_title = 'Link LocalBitcoins account'
  - include_header = true

block page-header
  h1 Link LocalBitcoins account

block content
  .container-narrow
    if error
      .bs-callout.bs-callout-danger= error

    .row: form.col-md-8(method='post')
      +csrf

      .form-group
        label(for='username') LocalBitcoins username
        input#username.form-control(type='text', name='username', value=hnuser, required, autofocus)

      :markdown
        To verify your ownership of the LocalBitcoins account,
        add the following text to your
        [profile introduction text](https://localbitcoins.com/accounts/profile/#toc0):

      pre= message

      button.btn.btn-primary.btn-lg(type='submit') Authenticate
